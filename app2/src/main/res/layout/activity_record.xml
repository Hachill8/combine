<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/record_backgroundcolor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/record_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <EditText
            android:id="@+id/search_record"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/record_search"
            android:text="搜尋作物紀錄"
            android:textSize="20dp"
            android:textColor="#fff"
            android:paddingLeft="14dp"
            android:paddingBottom="8dp"
            />

        <Button
            android:id="@+id/Select_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/search_condition"
            android:text="" />
    </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/record_bar">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="22dp"
            >

            <TableRow>


                <Button
                    android:id="@+id/bt1"
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:background="@drawable/imv01"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="50dp"
                    android:text="" />



                <Button
                    android:id="@+id/bt2"
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:background="@drawable/imv01"

                    android:text="" />


            </TableRow>



            <TableRow>
                <Button
                    android:id="@+id/bt3"
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:background="@drawable/imv01"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="30dp"
                    android:text="" />


                <Button
                    android:id="@+id/bt4"
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:background="@drawable/imv01"
                    android:layout_marginTop="30dp"
                    android:text="" />

            </TableRow>

            <TableRow>
                <Button
                    android:id="@+id/bt5"
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:background="@drawable/imv01"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="30dp"
                    android:text="" />


                <Button
                    android:id="@+id/bt6"
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:background="@drawable/imv01"
                    android:layout_marginTop="30dp"
                    android:text="" />

            </TableRow>


        </TableLayout>

        </ScrollView>



        <ImageButton
            android:id="@+id/back"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="280dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/back_to_home"
        />


    </RelativeLayout>
