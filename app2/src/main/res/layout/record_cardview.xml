<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:id="@+id/cardview"


    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:cardElevation="6dp"
    app:cardCornerRadius="10dp"
    app:contentPaddingBottom="7dp"
    >

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/rl"
        >

    <ImageView
        android:id="@+id/plant_imvId"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="57dp"
        app:srcCompat="@drawable/imv03" />

    <TextView
        android:id="@+id/periodId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:background="@drawable/period"
        />

    <TextView
        android:id="@+id/dateId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/periodId"

        android:layout_marginLeft="90dp"
        android:textSize="20dp"
        android:background="@drawable/period"
        />

    <TextView
        android:id="@+id/tx1Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/plant_imvId"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="140dp"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:background="@drawable/record_textview"
        />

    <TextView
        android:id="@+id/tx2Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="87dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="140dp"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:background="@drawable/record_textview"
        />

    <TextView
        android:id="@+id/tx3Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="117dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="140dp"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:background="@drawable/record_textview"
        />
    </RelativeLayout>
</android.support.v7.widget.CardView>