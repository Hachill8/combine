<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="450dp"
    android:orientation="vertical"
    android:background="@drawable/choose_pot_or_vege_cardbg"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center">


        <ImageView
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:src="@drawable/vege_info"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="#402C2B"
            android:layout_gravity="left"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:text="沙拉高麗菜"
            android:lineSpacingExtra="10dp"/>

        <View
            android:layout_width="250dp"
            android:layout_height="1.3dp"
            android:layout_gravity="center"
            android:background="#D2D5D3"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#796868"
            android:layout_gravity="center"
            android:text="採收期較長，播種之後65天左右的初期是迷你白菜，後半期可以採收到大顆的白菜。播種期大多在8月。"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:lineSpacingExtra="10dp"/>










    </LinearLayout>





</LinearLayout>