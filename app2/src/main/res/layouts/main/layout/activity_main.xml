<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/function_background"
    >

    <Button
        android:id="@+id/fab_搜"
        android:layout_width="69dp"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="201dp"
        android:background="@drawable/icon_tomato"
        android:text="search"
        android:textSize="40dp" />

    <ImageButton
        android:id="@+id/fab_紀"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/record" />

    <ImageButton
        android:id="@+id/fab_商"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="140dp"
        android:layout_marginBottom="150dp"
        android:background="@drawable/market" />

    <ImageButton
        android:id="@+id/fab_曆"
        android:layout_width="80dp"
        android:layout_height="90dp"

        android:layout_alignParentBottom="true"
        android:layout_marginLeft="140dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/cal" />

    <ImageButton
        android:id="@+id/fab_討"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="220dp"
        android:layout_marginBottom="80dp"

        android:background="@drawable/forum" />

    <ImageButton
        android:id="@+id/fab"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="280dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/back_to_home" />

    <RelativeLayout
        android:id="@+id/login_layout"
        android:layout_width="230dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="139dp"
        android:layout_marginTop="212dp">

        <com.google.android.gms.common.SignInButton
            android:id="@+id/bn_login"
            android:layout_width="230dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="23dp"
            android:background="@drawable/btn_google_signin"
            tools:ignore="OnClick">
        </com.google.android.gms.common.SignInButton>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/prof_section"
        android:layout_width="231dp"
        android:layout_height="173dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="17dp">

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bn_logout"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-15dp"
            android:layout_marginEnd="30dp"
            android:text="emailtext" />

        <Button
            android:id="@+id/bn_logout"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:text="sign out"
            tools:ignore="OnClick" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/email"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="49dp"
            android:text="nameText" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/name"
            android:layout_alignStart="@+id/textView9"
            android:text="name:" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="74dp"
            android:layout_height="57dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="55dp"
            android:text="email:" />

    </RelativeLayout>

</RelativeLayout>

