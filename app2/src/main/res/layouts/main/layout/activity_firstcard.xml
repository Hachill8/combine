<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".firstcard"
    android:orientation="vertical"
    android:background="#E6EAE7">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#E6EAE7"
        app:cardElevation="5dp">


            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="請選擇作物"
            android:layout_gravity="center"
            android:textColor="#89B094"
            android:textSize="48sp"
            android:layout_marginTop="10dp" />





    </android.support.v7.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="10dp">

                    <android.support.v7.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        app:cardCornerRadius="20dp"
                        android:layout_margin="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="140dp"
                                android:layout_height="130dp"
                                android:background="@drawable/chinesecabbage"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"/>
                            <TextView
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:text="迷你白菜"
                                android:textSize="30sp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_margin="5dp"
                                android:textColor="#402C2B"/>

                        </LinearLayout>







                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        app:cardCornerRadius="20dp"
                       android:layout_margin="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="140dp"
                                android:layout_height="130dp"
                                android:background="@drawable/spinach"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"/>
                            <TextView
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:text="菠菜"
                                android:textSize="30sp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_margin="5dp"
                                android:textColor="#402C2B"/>

                        </LinearLayout>







                    </android.support.v7.widget.CardView>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <android.support.v7.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        app:cardCornerRadius="20dp"
                        android:layout_margin="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="140dp"
                                android:layout_height="130dp"
                                android:background="@drawable/greenpepper"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"/>
                            <TextView
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:text="青椒"
                                android:textSize="30sp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_margin="5dp"
                                android:textColor="#402C2B"/>

                        </LinearLayout>







                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        app:cardCornerRadius="20dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="140dp"
                                android:layout_height="130dp"
                                android:background="@drawable/leaflettuce"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"/>
                            <TextView
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:text="葉萵苣"
                                android:textSize="30sp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_margin="5dp"
                                android:textColor="#402C2B"/>

                        </LinearLayout>







                    </android.support.v7.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_margin="10dp">

                    <android.support.v7.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        app:cardCornerRadius="20dp"
                        android:layout_margin="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="140dp"
                                android:layout_height="130dp"
                                android:background="@drawable/pea"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"/>
                            <TextView
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:text="豌豆"
                                android:textSize="30sp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_margin="5dp"
                                android:textColor="#402C2B"/>

                        </LinearLayout>







                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        app:cardCornerRadius="20dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="140dp"
                                android:layout_height="130dp"
                                android:background="@drawable/qingjiangcuisine"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"/>
                            <TextView
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:text="青江菜"
                                android:textSize="30sp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_margin="5dp"
                                android:textColor="#402C2B"/>

                        </LinearLayout>







                    </android.support.v7.widget.CardView>


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>





    </ScrollView>

</LinearLayout>