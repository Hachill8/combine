<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgtwo"
    tools:context=".login.login2">

    <TextView
        android:id="@+id/loginsub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="個人資訊"
        android:textColor="#ffff"
        android:textSize="60sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="30dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                        android:id="@+id/text_field_boxes"
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        app:labelText="輸入暱稱"
                        android:layout_gravity="center"
                        app:primaryColor="#518D62"
                        android:layout_marginTop="30dp"
                        app:iconSignifier="@drawable/edit_pencil">

                        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                            android:id="@+id/extended_edit_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                    </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>



                    <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                        android:id="@+id/text_field_boxes2"
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        app:labelText="輸入電話"
                        android:layout_gravity="center"
                        app:primaryColor="#518D62"
                        android:layout_marginTop="30dp"
                        app:iconSignifier="@drawable/edit_pencil">

                        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                            android:id="@+id/extended_edit_text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                    </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

                        <TextView
                            android:layout_width="320dp"
                            android:layout_height="wrap_content"
                            android:text="選擇性別"
                            android:textColor="#89B094"
                            android:textSize="30sp"
                            android:layout_gravity="center"
                            android:layout_marginTop="30dp"
                            />

                    <co.ceryle.radiorealbutton.RadioRealButtonGroup
                        android:layout_width="320dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        app:rrbg_animateDrawables_enter="overshoot"
                        app:rrbg_animateTexts_enter="overshoot"
                        app:rrbg_dividerColor="@color/black"
                        app:rrbg_dividerSize="4dp"
                        app:rrbg_radius="10dp"

                        app:rrbg_selectorColor="@color/red_700"
                        app:rrbg_selectorSize="6dp">

                        <co.ceryle.radiorealbutton.RadioRealButton
                            android:layout_width="50dp"
                            android:layout_height="60dp"
                            app:rrb_drawable="@mipmap/ic_launcher"
                            app:rrb_drawableHeight="36dp"
                            app:rrb_drawablePadding="8dp"
                            app:rrb_drawableWidth="36dp"
                            app:rrb_ripple="true"
                            app:rrb_rippleColor="@color/black"
                            app:rrb_text="男"
                            app:rrb_textColor="@color/black"/>

                        <co.ceryle.radiorealbutton.RadioRealButton
                            android:layout_width="50dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="50dp"
                            app:rrb_drawable="@mipmap/ic_launcher"
                            app:rrb_drawableGravity="right"
                            app:rrb_drawableHeight="36dp"
                            app:rrb_drawablePadding="8dp"
                            app:rrb_drawableWidth="36dp"
                            app:rrb_ripple="true"
                            app:rrb_rippleColor="@color/black"
                            app:rrb_text="女"
                            app:rrb_textColor="@color/black" />
                    </co.ceryle.radiorealbutton.RadioRealButtonGroup>

                        <TextView
                            android:id="@+id/tvShowNumbers"
                            android:layout_width="320dp"
                            android:layout_height="wrap_content"
                            android:text="種植經驗"
                            android:textColor="#89B094"
                            android:textSize="30sp"
                            android:layout_gravity="center"
                            android:layout_marginTop="30dp"
                            />

                    <co.ceryle.radiorealbutton.RadioRealButtonGroup
                        android:layout_width="320dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        app:rrbg_animateDrawables_enter="overshoot"
                        app:rrbg_animateTexts_enter="overshoot"
                        app:rrbg_dividerColor="@color/black"
                        app:rrbg_dividerSize="4dp"
                        app:rrbg_radius="10dp"

                        app:rrbg_selectorColor="@color/red_700"
                        app:rrbg_selectorSize="6dp">

                        <co.ceryle.radiorealbutton.RadioRealButton
                            android:layout_width="100dp"
                            android:layout_height="60dp"
                            app:rrb_drawable="@mipmap/ic_launcher"
                            app:rrb_drawableHeight="36dp"
                            app:rrb_drawablePadding="8dp"
                            app:rrb_drawableWidth="36dp"
                            app:rrb_ripple="true"
                            app:rrb_rippleColor="@color/black"
                            app:rrb_text="1年以下"
                            app:rrb_textColor="@color/black"/>

                        <co.ceryle.radiorealbutton.RadioRealButton
                            android:layout_width="100dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="100dp"
                            app:rrb_drawable="@mipmap/ic_launcher"
                            app:rrb_drawableGravity="right"
                            app:rrb_drawableHeight="36dp"
                            app:rrb_drawablePadding="8dp"
                            app:rrb_drawableWidth="36dp"
                            app:rrb_ripple="true"
                            app:rrb_rippleColor="@color/black"
                            app:rrb_text="2~3年"
                            app:rrb_textColor="@color/black" />
                    </co.ceryle.radiorealbutton.RadioRealButtonGroup>



                        <Button
                            android:id="@+id/btntomodel"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:background="@drawable/getstart"
                            android:layout_marginTop="30dp"/>




                </LinearLayout>





        </ScrollView>























</LinearLayout>