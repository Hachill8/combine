<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".search.choose_vege"
    android:background="#E6EAE7">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="建議作物"
                    android:layout_gravity="left"
                    android:textSize="30sp"
                    android:textColor="#402C2B"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp" />

                <Button
                    android:id="@+id/to_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="280dp"
                    android:layout_marginEnd="280dp"
                    android:layout_marginTop="10dp"
                    android:text="略過"
                    android:textColor="#ffff"
                    android:textSize="20dp"
                    android:background="@drawable/choose_btn"/>

            </RelativeLayout>


            <android.support.v7.widget.CardView
                android:id="@+id/vege_card_view1"
                android:layout_width="340dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="20dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="105dp"
                        android:src="@drawable/vege_cabbage"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/vege1_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="高麗菜"
                            android:textSize="25sp"
                            android:textColor="#402C2B"
                            android:layout_marginTop="17dp"
                            android:layout_marginLeft="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="#03~04、07~11月"
                            android:textSize="20dp"
                            android:textColor="#89B094"
                            android:layout_marginTop="2dp"
                            android:layout_marginLeft="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="#1~3個月可採收"
                            android:textSize="20dp"
                            android:textColor="#89B094"
                            android:layout_marginLeft="10dp"/>

                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/vege_card_view2"
                android:layout_width="340dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="105dp"
                        android:src="@drawable/vege_kon"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/vege2_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="空心菜"
                            android:textSize="25sp"
                            android:textColor="#402C2B"
                            android:layout_marginTop="17dp"
                            android:layout_marginLeft="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="#04~08月"
                            android:textSize="20dp"
                            android:textColor="#89B094"
                            android:layout_marginTop="2dp"
                            android:layout_marginLeft="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="#15~30天可採收"
                            android:textSize="20dp"
                            android:textColor="#89B094"
                            android:layout_marginLeft="10dp"/>

                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/vege_card_view3"
                android:layout_width="340dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="105dp"
                        android:src="@drawable/vege_ciu"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/vege3_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="秋葵"
                            android:textSize="25sp"
                            android:textColor="#402C2B"
                            android:layout_marginTop="17dp"
                            android:layout_marginLeft="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="#04~06月"
                            android:textSize="20dp"
                            android:textColor="#89B094"
                            android:layout_marginTop="2dp"
                            android:layout_marginLeft="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="#3~4個月可採收"
                            android:textSize="20dp"
                            android:textColor="#89B094"
                            android:layout_marginLeft="10dp"/>
                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/vege_card_view4"
                android:layout_width="340dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="105dp"
                        android:src="@drawable/vege_carrot"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/vege4_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="紅蘿蔔"
                            android:textSize="25sp"
                            android:textColor="#402C2B"
                            android:layout_marginTop="17dp"
                            android:layout_marginLeft="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="#08~02月"
                            android:textSize="20dp"
                            android:textColor="#89B094"
                            android:layout_marginTop="2dp"
                            android:layout_marginLeft="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="#3~4個月可採收"
                            android:textSize="20dp"
                            android:textColor="#89B094"
                            android:layout_marginLeft="10dp"/>

                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>




        </LinearLayout>
    </ScrollView>
</LinearLayout>