<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Welcome_woo"
    android:orientation="vertical"
    android:background="#E6EAE7">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="610dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="fill_parent"
                android:layout_height="300dp"
                android:layout_marginTop="-8dp"/>




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="高麗菜"
                android:textSize="30dp"
                android:textColor="#402C2B"
                android:layout_marginLeft="15dp"/>

            <View
                android:layout_width="330dp"
                android:layout_height="1.3dp"
                android:layout_gravity="center"
                android:background="#D2D5D3"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="適合栽種品種"
                android:textSize="20dp"
                android:textColor="#FC9D33"
                android:layout_marginLeft="15dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp">

                    <Button
                        android:id="@+id/vege_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="沙拉" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="沙拉" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="沙拉" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="沙拉" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="沙拉" />







                </LinearLayout>





            </HorizontalScrollView>









            <View
                android:layout_width="330dp"
                android:layout_height="1.3dp"
                android:layout_gravity="center"
                android:background="#D2D5D3"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>





            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小撇步"
                android:textSize="22sp"
                android:textColor="#FC9D33"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="雖然不同品種栽種方式不同，但只要遵守播種的適當時機即可。 太早播種，不但會太熟，也容易長蟲；太晚則不易結球。種植後，要不斷澆水、施肥，仔細管理。"
                android:textSize="18sp"
                android:lineSpacingExtra="7dp"
                android:textColor="#796868"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>



            <View
                android:layout_width="330dp"
                android:layout_height="1.3dp"
                android:layout_gravity="center"
                android:background="#D2D5D3"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="管理重點"
                android:textSize="22sp"
                android:textColor="#FC9D33"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="容器"
                        android:textSize="18sp"
                        android:lineSpacingExtra="7dp"
                        android:textColor="#402C2B"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="普通~大型尺寸花盆"
                        android:textSize="18sp"
                        android:lineSpacingExtra="7dp"
                        android:textColor="#796868"
                        android:layout_marginLeft="60dp"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="土壤"
                        android:textSize="18sp"
                        android:lineSpacingExtra="7dp"
                        android:textColor="#402C2B"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="葉菜用"
                        android:textSize="18sp"
                        android:lineSpacingExtra="7dp"
                        android:textColor="#796868"
                        android:layout_marginLeft="60dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="放置場所"
                        android:textSize="18sp"
                        android:textColor="#402C2B"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="日照充足、通風良好的地方"
                        android:textSize="18sp"
                        android:textColor="#796868"
                        android:layout_marginLeft="23dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="澆水"
                        android:textSize="18sp"
                        android:textColor="#402C2B"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="土乾了再大量加水"
                        android:textSize="18sp"
                        android:textColor="#796868"
                        android:layout_marginLeft="63dp"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="肥料(追肥)"
                        android:textSize="18sp"
                        android:textColor="#402C2B"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="種植之後的第2周與第4周追肥2次"
                        android:textSize="18sp"
                        android:textColor="#796868"
                        android:layout_marginLeft="15dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="病蟲害"
                        android:textSize="18sp"
                        android:textColor="#402C2B"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="容易長蚜蟲、青蟲，小菜蛾"
                        android:textSize="18sp"
                        android:textColor="#796868"
                        android:layout_marginLeft="45dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收成標準"
                        android:textSize="18sp"
                        android:textColor="#402C2B"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="27dp"
                        android:text="播種之後約60天即可收成"
                        android:textColor="#796868"
                        android:textSize="18sp" />

                </LinearLayout>


            </LinearLayout>





            <View
                android:layout_width="330dp"
                android:layout_height="1.3dp"
                android:layout_gravity="center"
                android:background="#D2D5D3"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="為您整理所需材料"
                android:textSize="20dp"
                android:textColor="#FC9D33"
                android:layout_marginLeft="15dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp">

                    <android.support.v7.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="180dp"
                        app:cardBackgroundColor="#E6EAE7"
                        android:layout_marginRight="5dp"
                        app:cardElevation="0dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/seek" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="高麗菜種子"
                                android:textSize="18sp"
                                android:textColor="#796868"
                                android:layout_gravity="left"
                                android:layout_marginTop="-5dp"/>

                        </LinearLayout>






                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="180dp"
                        app:cardBackgroundColor="#E6EAE7"
                        android:layout_marginRight="5dp"
                        app:cardElevation="0dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/seek" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="高麗菜種子"
                                android:textSize="18sp"
                                android:textColor="#796868"
                                android:layout_gravity="left"
                                android:layout_marginTop="-5dp"/>

                        </LinearLayout>






                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="180dp"
                        app:cardBackgroundColor="#E6EAE7"
                        android:layout_marginRight="5dp"
                        app:cardElevation="0dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/seek" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="高麗菜種子"
                                android:textSize="18sp"
                                android:textColor="#796868"
                                android:layout_gravity="left"
                                android:layout_marginTop="-5dp"/>

                        </LinearLayout>






                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="180dp"
                        app:cardBackgroundColor="#E6EAE7"
                        android:layout_marginRight="5dp"
                        app:cardElevation="0dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/seek" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="高麗菜種子"
                                android:textSize="18sp"
                                android:textColor="#796868"
                                android:layout_gravity="left"
                                android:layout_marginTop="-5dp"/>

                        </LinearLayout>






                    </android.support.v7.widget.CardView>






                </LinearLayout>





            </HorizontalScrollView>









        </LinearLayout>




    </ScrollView>






    <android.support.design.widget.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6EAE7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <Button
                android:id="@+id/start_plant"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:text="開 始 種 植"
                android:textColor="#E6EAE7"
                android:textSize="20dp"
                android:background="@drawable/btn_drawable"
                android:foreground="@drawable/ripple_foreground"
                />



            <Button
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:text="栽 培 日 曆"
                android:textSize="20dp"
                android:textColor="#89B094"
                style="?android:attr/borderlessButtonStyle"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                tools:targetApi="lollipop" />

            <View
            android:layout_width="1.3dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="#D2D5D3"/>

            <com.varunest.sparkbutton.SparkButton
                android:id="@+id/spark_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:sparkbutton_activeImage="@drawable/like_fill"
                app:sparkbutton_inActiveImage="@drawable/like_empty"
                app:sparkbutton_iconSize="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                app:sparkbutton_primaryColor="@color/primary_color"
                app:sparkbutton_secondaryColor="@color/secondary_color" />












        </LinearLayout>






    </android.support.design.widget.BottomNavigationView>












</LinearLayout>