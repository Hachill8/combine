<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#E6EAE7">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="610dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:id="@+id/vege_img"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/vege_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="高麗菜"
                android:textSize="30dp"
                android:textColor="#402C2B"
                android:layout_marginLeft="15dp"/>

            <View
                android:layout_width="330dp"
                android:layout_height="1.3dp"
                android:layout_gravity="center"
                android:background="#D2D5D3"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小撇步"
                android:textSize="22sp"
                android:textColor="#FC9D33"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:lineSpacingExtra="7dp"
                android:textColor="#796868"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>

            <View
                android:layout_width="330dp"
                android:layout_height="1.3dp"
                android:layout_gravity="center"
                android:background="#D2D5D3"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="管理重點"
                android:textSize="22sp"
                android:textColor="#FC9D33"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="容器"
                        android:textSize="18sp"
                        android:lineSpacingExtra="7dp"
                        android:textColor="#402C2B"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"/>
                    <TextView
                        android:id="@+id/container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="18sp"
                        android:lineSpacingExtra="7dp"
                        android:textColor="#796868"
                        android:layout_marginLeft="60dp"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="土壤"
                        android:textSize="18sp"
                        android:lineSpacingExtra="7dp"
                        android:textColor="#402C2B"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"/>
                    <TextView
                        android:id="@+id/soil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="18sp"
                        android:lineSpacingExtra="7dp"
                        android:textColor="#796868"
                        android:layout_marginLeft="60dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="放置場所"
                        android:textSize="18sp"
                        android:textColor="#402C2B"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"/>
                    <TextView
                        android:id="@+id/place"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="18sp"
                        android:textColor="#796868"
                        android:layout_marginLeft="23dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="澆水"
                        android:textSize="18sp"
                        android:textColor="#402C2B"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"/>
                    <TextView
                        android:id="@+id/water"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="18sp"
                        android:textColor="#796868"
                        android:layout_marginLeft="63dp"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="肥料(追肥)"
                        android:textSize="18sp"
                        android:textColor="#402C2B"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"/>
                    <TextView
                        android:id="@+id/fertilizer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="18sp"
                        android:textColor="#796868"
                        android:layout_marginLeft="15dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="病蟲害"
                        android:textSize="18sp"
                        android:textColor="#402C2B"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"/>
                    <TextView
                        android:id="@+id/bug"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="18sp"
                        android:textColor="#796868"
                        android:layout_marginLeft="45dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收成標準"
                        android:textSize="18sp"
                        android:textColor="#402C2B"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"/>

                    <TextView
                        android:id="@+id/harvest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="27dp"
                        android:text=""
                        android:textColor="#796868"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="330dp"
                android:layout_height="1.3dp"
                android:layout_gravity="center"
                android:background="#D2D5D3"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="為您整理所需材料"
                android:textSize="20dp"
                android:textColor="#FC9D33"
                android:layout_marginLeft="15dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp">

                    <android.support.v7.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="180dp"
                        app:cardBackgroundColor="#E6EAE7"
                        android:layout_marginRight="5dp"
                        app:cardElevation="0dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/seek" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="小白菜種子"
                                android:textSize="18sp"
                                android:textColor="#796868"
                                android:layout_gravity="left"
                                android:layout_marginTop="-5dp"/>

                        </LinearLayout>


                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="180dp"
                        app:cardBackgroundColor="#E6EAE7"
                        android:layout_marginRight="5dp"
                        app:cardElevation="0dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="150dp"
                                android:src="@drawable/vege_info_water"
                                android:layout_marginTop="3dp"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="澆水器"
                                android:textSize="18sp"
                                android:textColor="#796868"
                                android:layout_gravity="left" />

                        </LinearLayout>


                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="180dp"
                        app:cardBackgroundColor="#E6EAE7"
                        android:layout_marginRight="5dp"
                        app:cardElevation="0dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="150dp"
                                android:src="@drawable/vege_info_shovel"
                                android:layout_marginTop="3dp"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="鏟子"
                                android:textSize="18sp"
                                android:textColor="#796868"
                                android:layout_gravity="left" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="180dp"
                        app:cardBackgroundColor="#E6EAE7"
                        android:layout_marginRight="5dp"
                        app:cardElevation="0dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="150dp"
                                android:src="@drawable/vege_info_fertilizer"
                                android:layout_marginTop="3dp"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="肥料"
                                android:textSize="18sp"
                                android:textColor="#796868"
                                android:layout_gravity="left"
                               />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>


                </LinearLayout>


            </HorizontalScrollView>

        </LinearLayout>

    </ScrollView>


    <android.support.design.widget.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6EAE7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/start_plant"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:text="開 始 種 植"
                android:textColor="#E6EAE7"
                android:textSize="20dp"
                android:background="@drawable/btn_drawable"
                android:foreground="@drawable/ripple_foreground"
                />



            <Button
                android:id="@+id/choose_calendar"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:text="栽 培 日 曆"
                android:textSize="20dp"
                android:textColor="#89B094"
                style="?android:attr/borderlessButtonStyle"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                tools:targetApi="lollipop" />

            <View
            android:layout_width="1.3dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="#D2D5D3"/>

            <com.varunest.sparkbutton.SparkButton
                android:id="@+id/spark_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:sparkbutton_activeImage="@drawable/like_fill"
                app:sparkbutton_inActiveImage="@drawable/like_empty"
                app:sparkbutton_iconSize="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                app:sparkbutton_primaryColor="@color/primary_color"
                app:sparkbutton_secondaryColor="@color/secondary_color" />

        </LinearLayout>

    </android.support.design.widget.BottomNavigationView>


</LinearLayout>