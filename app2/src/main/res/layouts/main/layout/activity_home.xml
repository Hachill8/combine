<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.home"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <android.support.v7.widget.CardView
                android:id="@+id/home_search_bar"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginLeft="90dp"
                android:layout_centerVertical="true"
                app:cardBackgroundColor="#89B094"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="搜尋"
                    android:textColor="#402C2B"
                    android:textSize="18sp" />




            </android.support.v7.widget.CardView>


            <ImageButton
                android:id="@+id/person_info_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/person_photo"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:elevation="5dp"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="299dp"
                android:layout_height="232dp"
                android:background="@drawable/potpot"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>


            <ImageButton
                android:id="@+id/edit_pot"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/edit"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="30dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_pot"
                android:layout_marginLeft="15dp"
                android:text="編輯盆栽"
               android:layout_marginTop="-25dp"
                android:textColor="#402C2B"
                android:textSize="15sp" />

            <com.getbase.floatingactionbutton.FloatingActionsMenu
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                app:fab_addButtonColorNormal="#FC9D33"
                app:fab_addButtonColorPressed="#FC9D33"
                app:fab_addButtonPlusIconColor="#E6EAE7"
                app:fab_labelStyle="@style/custem_fab">


                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fab_colorNormal="#E6EAE7"
                    app:fab_colorPressed="#E6EAE7"
                    app:fab_icon="@drawable/test"
                    app:fab_size="mini"
                    android:id="@+id/fab1"
                    app:fab_title="fab1"
                    android:scaleType="center"/>

                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fab_colorNormal="#E6EAE7"
                    app:fab_colorPressed="#E6EAE7"
                    app:fab_icon="@drawable/edit"
                    app:fab_size="mini"
                    android:scaleType="center"
                    android:id="@+id/fab2"
                    app:fab_title="fab2"/>





            </com.getbase.floatingactionbutton.FloatingActionsMenu>





        </RelativeLayout>






    </LinearLayout>














</android.support.v4.widget.DrawerLayout>