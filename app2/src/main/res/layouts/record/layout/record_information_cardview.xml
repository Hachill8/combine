<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:id="@+id/information_cardview"


    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:cardElevation="6dp"
    app:cardCornerRadius="10dp"
    app:contentPaddingBottom="7dp"
    >

    <RelativeLayout
        android:id="@+id/info_cardview_RL"
        android:layout_width="300dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/plant_imvId"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="57dp"
            app:srcCompat="@drawable/imv03" />

        <TextView
            android:id="@+id/periodId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/period"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/dateId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/periodId"

            android:layout_marginLeft="90dp"
            android:background="@drawable/period"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tx1Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/plant_imvId"
            android:layout_marginLeft="140dp"
            android:background="@drawable/record_textview"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tx2Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="87dp"
            android:background="@drawable/record_textview"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tx3Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="117dp"
            android:background="@drawable/record_textview"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>