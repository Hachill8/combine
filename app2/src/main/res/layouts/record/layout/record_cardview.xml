<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="200dp"
    android:id="@+id/record_cardview"
    app:cardBackgroundColor="@color/record_backgroundcolor"



    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:cardElevation="6dp"
    app:cardCornerRadius="10dp"
    app:contentPaddingBottom="7dp"
    >

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:background="@color/record_backgroundcolor"
        >

        <ImageView
            android:id="@+id/plantId"
            android:layout_width="100dp"

            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/tx1"
            android:layout_width="80dp"
            android:layout_height="18dp"
            android:layout_below="@+id/plantId"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15dp"
            />

        <TextView
            android:id="@+id/tx2"
            android:layout_width="80dp"
            android:layout_height="12dp"
            android:layout_below="@+id/tx1"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="10dp"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>