<?xml version="1.0" encoding="utf-8"?>
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/white">
    <!--ripple中的color為點擊時的顏色-->

    <!--基本顏色
    <item>
        <shape>
            <solid android:color="#61d169" />
            <corners android:radius="5dip"/>
