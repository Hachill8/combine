<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".personal_info_edit">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/white" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="78dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="126dp"
                android:layout_height="44dp"
                android:layout_marginTop="12dp"
                android:text="個人資料"
                android:textColor="@color/black"
                android:textSize="28dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="450dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:text="姓名*"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary1"/>

            <EditText
                android:id="@+id/edit_name"
                android:layout_width="326dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:text="電話*"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary1" />

            <EditText
                android:id="@+id/edit_phone"
                android:layout_width="326dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:text="所在地*"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary1" />

            <EditText
                android:id="@+id/edit_address"
                android:layout_width="326dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName" />


            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:text="年紀*"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary1" />

            <EditText
                android:id="@+id/edit_age"
                android:layout_width="326dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:text="性別*"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary1" />

            <EditText
                android:id="@+id/edit_gender"
                android:layout_width="326dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:text="種植經驗*"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary1" />

            <EditText
                android:id="@+id/edit_expri"
                android:layout_width="326dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName" />

        </LinearLayout>

    </ScrollView>

    <android.support.design.widget.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6EAE7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/user_info_cancel"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:text="取消"
                android:textColor="#89B094"
                android:textSize="20dp"
                tools:targetApi="lollipop" />

            <View
                android:layout_width="1.3dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:background="#D2D5D3"/>

            <Button
                android:id="@+id/user_info_confirm"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:text="確定"
                android:textColor="#89B094"
                android:textSize="20dp"
                tools:targetApi="lollipop" />

            <View
                android:layout_width="1.3dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="#D2D5D3" />


        </LinearLayout>

    </android.support.design.widget.BottomNavigationView>

</LinearLayout>