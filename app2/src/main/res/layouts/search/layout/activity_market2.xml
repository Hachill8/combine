<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:background="#89B094">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="800dp">

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:layout_marginHorizontal="0dp"
                android:background="@drawable/market_headind_bkgd" />

            <Button
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/market_user">
            </Button>

            <Button
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="270dp"
                android:background="@drawable/market_like">
            </Button>

            <Button
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="315dp"
                android:background="@drawable/market_shopping_cart">
            </Button>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:text="務農族"
                android:textColor="#fff"
                android:textSize="32dp">

            </TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="165dp">

            <AutoCompleteTextView
                android:id="@+id/search_market_bar"
                android:layout_width="220dp"
                android:layout_height="35dp"
                android:layout_alignRight="@+id/search_bar"
                android:layout_centerHorizontal="true"
                android:background="@drawable/market_search_bar"
                android:completionThreshold="1"
                card_view:ignore="LabelFor" />

            <Button
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/market_filter"
                    android:layout_marginLeft="10dp">
            </Button>

        </LinearLayout>

        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_marginTop="250dp"
            android:background="#89B094">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:text="最熱門 >"
                android:textSize="20dp"
                android:textColor="#fff">
            </TextView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginTop="45dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp">

                    <android.support.v7.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_marginRight="15dp"
                        card_view:cardCornerRadius="15dp"
                        android:background="#fff">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <com.varunest.sparkbutton.SparkButton
                                android:id="@+id/spark_button_1"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                app:sparkbutton_activeImage="@drawable/like_fill"
                                app:sparkbutton_inActiveImage="@drawable/like_empty"
                                app:sparkbutton_iconSize="15dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="120dp"
                                android:layout_marginTop="10dp"
                                app:sparkbutton_primaryColor="@color/primary_color"
                                app:sparkbutton_secondaryColor="@color/secondary_color" />

                            <Button
                                android:id="@+id/goto_product_detail_1"
                                android:layout_width="120dp"
                                android:layout_height="90dp"
                                android:background="@drawable/market_product_1"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="25dp">
                            </Button>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="白鐵移植鏝"
                                android:textSize="20dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="130dp">
                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="NT$85"
                                android:layout_marginTop="160dp"
                                android:layout_marginLeft="15dp">
                            </TextView>

                </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_marginRight="15dp"
                        card_view:cardCornerRadius="10dp"
                        android:background="#fff">

                        <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                            <com.varunest.sparkbutton.SparkButton
                                android:id="@+id/spark_button_2"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                app:sparkbutton_activeImage="@drawable/like_fill"
                                app:sparkbutton_inActiveImage="@drawable/like_empty"
                                app:sparkbutton_iconSize="15dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="120dp"
                                android:layout_marginTop="10dp"
                                app:sparkbutton_primaryColor="@color/primary_color"
                                app:sparkbutton_secondaryColor="@color/secondary_color" />

                        <Button
                            android:layout_width="120dp"
                            android:layout_height="90dp"
                            android:background="@drawable/market_product_2"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="25dp">
                        </Button>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="盆栽(含底盤)"
                            android:textSize="20dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="130dp">

                        </TextView>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="NT$199"
                                android:layout_marginTop="160dp"
                                android:layout_marginLeft="15dp">
                            </TextView>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_marginRight="15dp"
                    card_view:cardCornerRadius="10dp"
                    android:background="#fff">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.varunest.sparkbutton.SparkButton
                            android:id="@+id/spark_button_3"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            app:sparkbutton_activeImage="@drawable/like_fill"
                            app:sparkbutton_inActiveImage="@drawable/like_empty"
                            app:sparkbutton_iconSize="15dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="120dp"
                            android:layout_marginTop="10dp"
                            app:sparkbutton_primaryColor="@color/primary_color"
                            app:sparkbutton_secondaryColor="@color/secondary_color" />

                        <Button
                            android:layout_width="120dp"
                            android:layout_height="90dp"
                            android:background="@drawable/market_product_3"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="25dp">
                        </Button>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="二合一澆水器"
                            android:textSize="20dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="130dp">
                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NT$268"
                            android:layout_marginTop="160dp"
                            android:layout_marginLeft="15dp">
                        </TextView>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            </HorizontalScrollView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_marginTop="510dp"
            android:background="#89B094">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:text="編輯精選 >"
                android:textSize="20dp"
                android:textColor="#fff">
            </TextView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginTop="45dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp">

                    <android.support.v7.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_marginRight="15dp"
                        card_view:cardCornerRadius="10dp"
                        android:background="#fff">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <com.varunest.sparkbutton.SparkButton
                                android:id="@+id/spark_button_4"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                app:sparkbutton_activeImage="@drawable/like_fill"
                                app:sparkbutton_inActiveImage="@drawable/like_empty"
                                app:sparkbutton_iconSize="15dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="120dp"
                                android:layout_marginTop="10dp"
                                app:sparkbutton_primaryColor="@color/primary_color"
                                app:sparkbutton_secondaryColor="@color/secondary_color" />

                            <Button
                                android:layout_width="120dp"
                                android:layout_height="90dp"
                                android:background="@drawable/market_product_4"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="25dp">
                            </Button>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="園藝工具組"
                                android:textSize="20dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="130dp">
                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="NT$228"
                                android:layout_marginTop="160dp"
                                android:layout_marginLeft="15dp">
                            </TextView>

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_marginRight="15dp"
                        card_view:cardCornerRadius="10dp"
                        android:background="#fff">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <com.varunest.sparkbutton.SparkButton
                                android:id="@+id/spark_button_5"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                app:sparkbutton_activeImage="@drawable/like_fill"
                                app:sparkbutton_inActiveImage="@drawable/like_empty"
                                app:sparkbutton_iconSize="15dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="120dp"
                                android:layout_marginTop="10dp"
                                app:sparkbutton_primaryColor="@color/primary_color"
                                app:sparkbutton_secondaryColor="@color/secondary_color" />

                            <Button
                                android:layout_width="120dp"
                                android:layout_height="90dp"
                                android:background="@drawable/market_product_5"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="25dp">
                            </Button>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="靚土培養土"
                                android:textSize="20dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="130dp">
                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="NT$159"
                                android:layout_marginTop="160dp"
                                android:layout_marginLeft="15dp">
                            </TextView>

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_marginRight="15dp"
                        card_view:cardCornerRadius="10dp"
                        android:background="#fff">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <com.varunest.sparkbutton.SparkButton
                                android:id="@+id/spark_button_6"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                app:sparkbutton_activeImage="@drawable/like_fill"
                                app:sparkbutton_inActiveImage="@drawable/like_empty"
                                app:sparkbutton_iconSize="15dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="120dp"
                                android:layout_marginTop="10dp"
                                app:sparkbutton_primaryColor="@color/primary_color"
                                app:sparkbutton_secondaryColor="@color/secondary_color" />

                            <Button
                                android:layout_width="120dp"
                                android:layout_height="90dp"
                                android:background="@drawable/market_product_6"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="25dp">
                            </Button>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="防刺園藝手套"
                                android:textSize="20dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="130dp">
                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="NT$178"
                                android:layout_marginTop="160dp"
                                android:layout_marginLeft="15dp">
                            </TextView>

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </HorizontalScrollView>
        </RelativeLayout>

    </RelativeLayout>

</ScrollView>