<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/market_p4_head"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#779880">

        <TextView
            android:id="@+id/cart_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:text="購物車(0)"
            android:textColor="#fff"
            android:textSize="24dp"/>

        <Button
            android:id="@+id/back_2_market"
            android:layout_width="25dp"
            android:layout_height="15dp"
            android:background="@drawable/market_back2search_product"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"/>

        <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/market_p4_line1"/>

    </RelativeLayout>

    <ScrollView
       android:layout_width="match_parent"
       android:layout_height="410dp"
       android:layout_marginTop="50dp">

       <android.support.v7.widget.RecyclerView
                android:id = "@+id/market4_shopping_cart_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginTop="5dp"/>

   </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="460dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/market_p4_line1"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">




        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">


        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="535dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="23.5dp">

            <TextView
                android:id="@+id/product_amount_sum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="35dp"
                android:gravity="right"
                android:text="共計 0 件商品"
                android:textColor="#808080"
                android:textSize="16dp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="23.5dp"
            android:layout_marginTop="23.5dp">

            <TextView
                android:id="@+id/product_price_sum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#808080"
                android:text="商品總計：NT$ 0"
                android:gravity="right"
                android:layout_marginRight="35dp"
                android:layout_centerVertical="true"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_marginTop="47dp">

            <TextView
                android:id="@+id/fare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#808080"
                android:text="運費：NT$ 0"
                android:gravity="right"
                android:layout_marginRight="35dp"
                android:layout_centerVertical="true"/>


        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/market_p4_line2"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="610dp">

        <TextView
            android:id="@+id/product_all_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:textColor="#D10000"
            android:text="應付金額：NT$ 0"
            android:gravity="right"
            android:layout_marginRight="35dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="645dp">
        
        <Button
            android:id="@+id/to_pay"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:background="@drawable/market_p4_bt1"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:text="下一步"
            android:textSize="20dp"
            android:textColor="#fff"/>



    </RelativeLayout>


</RelativeLayout>