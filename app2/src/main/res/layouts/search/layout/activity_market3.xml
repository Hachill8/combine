<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="620dp"
        android:background="#fff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="360dp">

                <ImageView
                    android:id="@+id/product_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/market_product_1_detail"
                    android:scaleType="fitXY" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <ImageView
                        android:id="@+id/market_cart_base"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="308dp"
                        android:background="@drawable/market_cart_back"/>

                    <Button
                        android:id="@+id/market_cart"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="312dp"
                        android:background="@drawable/market_shopping_cart">
                    </Button>

                    <TextView
                        android:id="@+id/product_num_in_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#f00"
                        android:text="00"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_marginTop="7dp"
                        android:layout_marginLeft="332dp"/>

                    <ImageView
                        android:id="@+id/market_back_base"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="14dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/market_cart_back" />

                    <Button
                        android:id="@+id/back_market"
                        android:layout_width="25dp"
                        android:layout_height="15dp"
                        android:background="@drawable/market_back2search_product"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp">
                    </Button>

                </RelativeLayout>

        </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff">

                <Button
                    android:id="@+id/btnDecrease"
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="87dp"
                    android:background="#00000000"></Button>

                <Button
                    android:id="@+id/btnIncrease"
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="87dp"
                    android:background="#00000000" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="80dp"
                    android:background="@drawable/market_product_number" />

                <TextView
                    android:id="@+id/etAmount"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="58dp"
                    android:layout_marginTop="89dp"
                    android:background="#fff"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#000000"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/product_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:text="白鐵移植鏝"
                    android:textColor="#000000"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="35dp"/>

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="125dp"
                    android:layout_marginTop="78dp"
                    android:text="NT$85"
                    android:textColor="#61D169"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="135dp"
                    android:text="商品介紹"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:text="品名："
                    android:textSize="15dp" />

                <TextView
                android:id="@+id/product_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="白鐵移植鏝"
                >

                </TextView>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:text="產地："
                    android:textSize="15dp"></TextView>

                    <TextView
                    android:id="@+id/origin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="台灣"
                    android:textSize="15dp"></TextView>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:text="特色："
                    android:textSize="15dp"></TextView>

                <TextView
                    android:id="@+id/characteristic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全柄一體成型，折不彎，附刻度"
                    android:textSize="15dp"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:text="規格："
                    android:textSize="15dp"/>

                    <TextView
                    android:id="@+id/product_format"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="規格內容"
                    android:textSize="15dp"/>

                </LinearLayout>


                </LinearLayout>


        </LinearLayout>

    </ScrollView>


    <android.support.design.widget.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="620dp"
        android:background="#fff"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <com.varunest.sparkbutton.SparkButton
                android:id="@+id/spark_button_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:sparkbutton_activeImage="@drawable/like_fill"
                app:sparkbutton_inActiveImage="@drawable/like_empty"
                app:sparkbutton_iconSize="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="10dp"
                app:sparkbutton_primaryColor="@color/primary_color"
                app:sparkbutton_secondaryColor="@color/secondary_color" />

            <Button
                android:id="@+id/add_to_cart"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="95dp"
                android:background="@drawable/market_add2cart">

            </Button>

        </RelativeLayout>

    </android.support.design.widget.BottomNavigationView>

</RelativeLayout>
