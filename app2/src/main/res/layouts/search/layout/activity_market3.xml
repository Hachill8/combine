<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#89B094">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="680dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="280dp">

            <Button
                android:id="@+id/back_2_market"
                android:layout_width="35dp"
                android:layout_height="20dp"
                android:background="@drawable/market_back2search_product"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp">
            </Button>

            <Button
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="315dp"
                android:background="@drawable/market_shopping_cart">
            </Button>

            <Button
                android:layout_width="200dp"
                android:layout_height="240dp"
                android:background="@drawable/market_product_1_detail"
                android:layout_centerInParent="true">
            </Button>

        </RelativeLayout>

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="280dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/market_product_background">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="白鐵移植鏝"
                android:textColor="#000000"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="35dp">

            </TextView>

            <Button
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:background="@drawable/market_product_number"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="35dp">

            </Button>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="商品介紹"
                android:textStyle="bold"
                android:layout_marginTop="135dp"
                android:layout_marginLeft="35dp">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="品名："
                android:layout_marginTop="165dp"
                android:layout_marginLeft="35dp">

            </TextView>

            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="白鐵移植鏝"
                android:layout_marginTop="165dp"
                android:layout_marginLeft="80dp">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="尺寸："
                android:layout_marginTop="190dp"
                android:layout_marginLeft="35dp">
            </TextView>

            <TextView
                android:id="@+id/product_dimension"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="全長28cm/鏟深15.5cm/鏟寬7.8cm"
                android:layout_marginTop="190dp"
                android:layout_marginLeft="80dp">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="產地："
                android:layout_marginTop="215dp"
                android:layout_marginLeft="35dp">
            </TextView>

            <TextView
                android:id="@+id/origin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="台灣"
                android:layout_marginTop="215dp"
                android:layout_marginLeft="80dp">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="特色："
                android:layout_marginTop="240dp"
                android:layout_marginLeft="35dp">
            </TextView>

            <TextView
                android:id="@+id/characteristic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="全柄一體成型，折不彎，附刻度"
                android:layout_marginTop="240dp"
                android:layout_marginLeft="80dp">
            </TextView>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="280dp">

                <com.varunest.sparkbutton.SparkButton
                    android:id="@+id/spark_button_1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:sparkbutton_activeImage="@drawable/like_fill"
                    app:sparkbutton_inActiveImage="@drawable/like_empty"
                    app:sparkbutton_iconSize="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="10dp"
                    app:sparkbutton_primaryColor="@color/primary_color"
                    app:sparkbutton_secondaryColor="@color/secondary_color" />

                <Button
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="95dp"
                    android:background="@drawable/market_add2cart">

                </Button>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>