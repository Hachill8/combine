<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="800dp"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="371dp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/personal_back"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </ImageView>

            <ImageView
                android:id="@+id/user_img"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/user10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView4"

                android:layout_marginTop="148dp"
                android:scaleType="fitXY">
            </ImageView>

            <TextView
                android:id="@+id/personal_username"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginTop="40dp"
                android:gravity="center_horizontal"
                android:text="狠愛種"
                android:textSize="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView4"/>

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="20dp"
                android:layout_height="80dp"
                android:background="@drawable/record_line1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/level"
                app:layout_constraintStart_toEndOf="@+id/model"
                app:layout_constraintTop_toBottomOf="@+id/personal_username">

            </ImageView>

            <Button
                android:id="@+id/model"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="72dp"
                android:background="@drawable/personal_plant"
                app:layout_constraintBottom_toTopOf="@+id/textView17"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.971"/>

            <Button
                android:id="@+id/level"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="68dp"
                android:background="@drawable/personal_upgrade"
                app:layout_constraintBottom_toTopOf="@+id/textView12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.964">

            </Button>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_horizontal"
                android:text="等級：99"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/level"
                app:layout_constraintHorizontal_bias="0.477"
                app:layout_constraintStart_toStartOf="@+id/level">

            </TextView>

            <TextView
                android:id="@+id/textView17"
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_horizontal"
                android:text="階段: 盆栽"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/model"
                app:layout_constraintHorizontal_bias="0.455"
                app:layout_constraintStart_toStartOf="@+id/model">

            </TextView>
        </android.support.constraint.ConstraintLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#ECECEC"
            android:layout_marginTop="370dp">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#fff"
            android:layout_marginTop="400dp">

            <Button
                android:id="@+id/personal_user_data_icon"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/personal_user_data">
            </Button>

            <Button
                android:id="@+id/personal_user_info"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="10dp"
                android:background="#00000000"
                android:gravity="fill_horizontal"
                android:text="個人資料"
                android:textSize="22dp">

            </Button>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="85dp"
                android:background="@drawable/personal_line">

            </ImageView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#ffffff"
            android:layout_marginTop="460dp">

            <Button
                android:id="@+id/personal_article_icon"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/personal_article">
            </Button>

            <Button
                android:id="@+id/personal_article"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="10dp"
                android:background="#00000000"
                android:gravity="fill_horizontal"
                android:text="我的文章"
                android:textSize="22dp">

            </Button>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="85dp"
                android:background="@drawable/personal_line">

            </ImageView>



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#ffffff"
            android:layout_marginTop="520dp">

            <Button
                android:id="@+id/personal_collect_icon"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/personal_collect">
            </Button>

            <Button
                android:id="@+id/personal_collect"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="40dp"
                android:layout_marginLeft="85dp"
                android:background="#00000000"
                android:text="收藏作物"
                android:textSize="22dp"
                android:gravity="fill_horizontal">

            </Button>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="85dp"
                android:background="@drawable/personal_line">

            </ImageView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#ffffff"
            android:layout_marginTop="580dp">

            <Button
                android:id="@+id/personal_article_like_icon"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/personal_article_like">
            </Button>

            <Button
                android:id="@+id/personal_article_like"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="40dp"
                android:layout_marginLeft="85dp"
                android:background="#00000000"
                android:text="收藏文章"
                android:textSize="22dp"
                android:gravity="fill_horizontal">

            </Button>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#ECECEC"
            android:layout_marginTop="640dp">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#ffffff"
            android:layout_marginTop="670dp">

            <Button
                android:id="@+id/personal_help_icon"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/personal_help">
            </Button>

            <Button
                android:id="@+id/personal_help"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="40dp"
                android:layout_marginLeft="85dp"
                android:background="#00000000"
                android:text="聯絡我們"
                android:textSize="22dp"
                android:gravity="fill_horizontal">

            </Button>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="85dp"
                android:background="@drawable/personal_line">

            </ImageView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#ffffff"
            android:layout_marginTop="730dp">

            <Button
                android:id="@+id/personal_signout_icon"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/personal_signout">
            </Button>

            <Button
                android:id="@+id/personal_signout"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="40dp"
                android:layout_marginLeft="85dp"
                android:background="#00000000"
                android:text="登出"
                android:textSize="22dp"
                android:gravity="fill_horizontal">

            </Button>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="85dp"
                android:background="@drawable/personal_line">

            </ImageView>

        </RelativeLayout>

    </RelativeLayout>



</ScrollView>