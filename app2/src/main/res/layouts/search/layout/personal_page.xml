<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="800dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/personal_back">

            </ImageView>

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="150dp"
                android:background="@drawable/user10">
            </ImageView>

            <TextView
                android:id="@+id/personal_username"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="250dp"
                android:text="狠愛種"
                android:gravity="center_horizontal"
                android:textSize="24dp">
            </TextView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="200dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="80dp"
                android:background="@drawable/record_line1"
                android:layout_marginTop="85dp"
                android:layout_marginLeft="170dp">

            </ImageView>

            <Button
                android:id="@+id/model"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="65dp"
                android:background="@drawable/personal_plant">
            </Button>

            <Button
                android:id="@+id/level"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="240dp"
                android:background="@drawable/personal_upgrade">

            </Button>

            <TextView
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="130dp"
                android:text="階段: 盆栽"
                android:textSize="18dp"
                android:gravity="center_horizontal">

            </TextView>

            <TextView
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:layout_marginLeft="195dp"
                android:layout_marginTop="130dp"
                android:text="等級：XX"
                android:textSize="18dp"
                android:gravity="center_horizontal">

            </TextView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#ECECEC"
            android:layout_marginTop="370dp">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#fff"
            android:layout_marginTop="400dp">

            <Button
                android:id="@+id/personal_user_data_icon"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/personal_user_data">
            </Button>

            <Button
                android:id="@+id/personal_user_info"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="40dp"
                android:layout_marginLeft="85dp"
                android:background="#ffffff"
                android:text="個人資料"
                android:textSize="22dp"
                android:gravity="fill_horizontal">

            </Button>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="85dp"
                android:background="@drawable/personal_line">

            </ImageView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#ffffff"
            android:layout_marginTop="460dp">

            <Button
                android:id="@+id/personal_article_icon"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/personal_article">
            </Button>

            <Button
                android:id="@+id/personal_article"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="40dp"
                android:layout_marginLeft="85dp"
                android:background="#ffffff"
                android:text="我的文章"
                android:textSize="22dp"
                android:gravity="fill_horizontal">

            </Button>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="85dp"
                android:background="@drawable/personal_line">

            </ImageView>



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#ffffff"
            android:layout_marginTop="520dp">

            <Button
                android:id="@+id/personal_collect_icon"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/personal_collect">
            </Button>

            <Button
                android:id="@+id/personal_collect"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="40dp"
                android:layout_marginLeft="85dp"
                android:background="#ffffff"
                android:text="收藏作物"
                android:textSize="22dp"
                android:gravity="fill_horizontal">

            </Button>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="85dp"
                android:background="@drawable/personal_line">

            </ImageView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#ffffff"
            android:layout_marginTop="580dp">

            <Button
                android:id="@+id/personal_article_like_icon"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/personal_article_like">
            </Button>

            <Button
                android:id="@+id/personal_article_like"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="40dp"
                android:layout_marginLeft="85dp"
                android:background="#ffffff"
                android:text="收藏文章"
                android:textSize="22dp"
                android:gravity="fill_horizontal">

            </Button>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#ECECEC"
            android:layout_marginTop="640dp">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#ffffff"
            android:layout_marginTop="670dp">

            <Button
                android:id="@+id/personal_help_icon"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/personal_help">
            </Button>

            <Button
                android:id="@+id/personal_help"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="40dp"
                android:layout_marginLeft="85dp"
                android:background="#ffffff"
                android:text="幫助"
                android:textSize="22dp"
                android:gravity="fill_horizontal">

            </Button>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="85dp"
                android:background="@drawable/personal_line">

            </ImageView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#ffffff"
            android:layout_marginTop="730dp">

            <Button
                android:id="@+id/personal_signout_icon"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/personal_signout">
            </Button>

            <Button
                android:id="@+id/personal_signout"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="40dp"
                android:layout_marginLeft="85dp"
                android:background="#ffffff"
                android:text="登出"
                android:textSize="22dp"
                android:gravity="fill_horizontal">

            </Button>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="85dp"
                android:background="@drawable/personal_line">

            </ImageView>

        </RelativeLayout>

    </RelativeLayout>



</ScrollView>