<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6EAE7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--搜尋列+篩選鈕-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:paddingHorizontal="5dp"
            android:paddingTop="7dp"
            >
            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="280dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/searchbar"
                    />

                <AutoCompleteTextView
                    android:id="@+id/search_view"
                    style="@style/Theme.SearchView"
                    android:layout_width="250dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:background="@null"
                    android:textSize="20dp"
                    android:completionThreshold="1" />


            </RelativeLayout>

            <ImageButton
                android:id="@+id/BT_filter"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/search_choose"
                android:layout_gravity="center"
                android:elevation="4dp"
                android:background="@drawable/search_choose_bg"/>

        </LinearLayout>

        <!--當季作物tx-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="25dp"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="建議作物"
                android:textColor="#402C2B"
                android:textSize="24dp" />

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/vege_card_view1"
            android:layout_width="340dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="105dp"
                    android:src="@drawable/vege_cabbage"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/vege1_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="高麗菜"
                        android:textSize="25sp"
                        android:textColor="#402C2B"
                        android:layout_marginTop="17dp"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#03~04、07~11月"
                        android:textSize="15dp"
                        android:textColor="#89B094"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#1~3個月可採收"
                        android:textSize="15dp"
                        android:textColor="#89B094"
                        android:layout_marginLeft="10dp"/>

                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/vege_card_view2"
            android:layout_width="340dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="105dp"
                    android:src="@drawable/vege_kon"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/vege2_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="空心菜"
                        android:textSize="25sp"
                        android:textColor="#402C2B"
                        android:layout_marginTop="17dp"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#04~08月"
                        android:textSize="15dp"
                        android:textColor="#89B094"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#15~30天可採收"
                        android:textSize="15dp"
                        android:textColor="#89B094"
                        android:layout_marginLeft="10dp"/>

                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/vege_card_view3"
            android:layout_width="340dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="105dp"
                    android:src="@drawable/vege_ciu"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/vege3_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="秋葵"
                        android:textSize="25sp"
                        android:textColor="#402C2B"
                        android:layout_marginTop="17dp"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#04~06月"
                        android:textSize="15dp"
                        android:textColor="#89B094"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#3~4個月可採收"
                        android:textSize="15dp"
                        android:textColor="#89B094"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/vege_card_view4"
            android:layout_width="340dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="105dp"
                    android:src="@drawable/vege_carrot"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/vege4_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="紅蘿蔔"
                        android:textSize="25sp"
                        android:textColor="#402C2B"
                        android:layout_marginTop="17dp"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#08~02月"
                        android:textSize="15dp"
                        android:textColor="#89B094"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#3~4個月可採收"
                        android:textSize="15dp"
                        android:textColor="#89B094"
                        android:layout_marginLeft="10dp"/>

                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>




    </LinearLayout>
</ScrollView>

