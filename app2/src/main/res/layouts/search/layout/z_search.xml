<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6EAE7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--搜尋列+篩選鈕-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:paddingHorizontal="5dp"
            android:paddingTop="7dp"
            >
            <android.support.v7.widget.SearchView
                android:id="@+id/search_view"
                style="@style/Theme.SearchView"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:text="" />

            <ImageButton
                android:id="@+id/edit_pot"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/search_choose"
                android:layout_gravity="center"
                android:elevation="4dp"
                android:background="@drawable/search_choose_bg"/>

        </LinearLayout>

        <!--當季作物tx-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="25dp"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="當季作物"
                android:textSize="24dp"
                android:textColor="#402C2B"/>

        </LinearLayout>

        <!--顯示作物資料欄1-->
        <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp">
        <Button
            android:id="@+id/BT_nextPageBtn1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"/>

        <ImageView
            android:id="@+id/white_behi1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:srcCompat="@drawable/icon2_4" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="24dp"
            android:paddingLeft="20dp">

            <Button
                android:id="@+id/BT_corp_picture1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_cabbage" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="24dp"
            android:paddingLeft="190dp">

            <TextView
                android:id="@+id/TX_crop_name1"
                android:layout_width="73dp"
                android:layout_height="30dp"
                android:background="@drawable/icon11"
                android:text="高麗菜"
                android:textColor="#3D4B42"
                android:textSize="23dp" />

            <Button
                android:id="@+id/BT_hashtag1_1"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:background="#00000000"
                android:gravity="left"
                android:text="#四季"
                android:textColor="#89B094"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/BT_hashtag1_2"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:background="#00000000"
                android:gravity="left"
                android:text="#20~25天收成"
                android:textColor="#89B094"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/BT_hashtag1_3"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:background="#00000000"
                android:gravity="left"
                android:text="#20~25度C"
                android:textColor="#89B094"
                android:textStyle="bold"/>
        </LinearLayout>

    </FrameLayout>

        <!--顯示作物資料欄2-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp">

            <Button
                android:id="@+id/BT_nextPageBtn2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"/>

            <ImageView
                android:id="@+id/white_behi2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:srcCompat="@drawable/icon2_4" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="24dp"
                android:paddingLeft="20dp">

                <Button
                    android:id="@+id/BT_corp_picture2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_tomato" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="24dp"
                android:paddingLeft="190dp">

                <TextView
                    android:id="@+id/TX_crop_name2"
                    android:layout_width="73dp"
                    android:layout_height="30dp"
                    android:background="@drawable/icon11"
                    android:text="番茄"
                    android:textColor="#3D4B42"
                    android:textSize="23dp" />

                <Button
                    android:id="@+id/BT_hashtag2_1"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:background="#00000000"
                    android:gravity="left"
                    android:text="#四季"
                    android:textColor="#89B094"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/BT_hashtag2_2"
                    android:layout_width="wrap_content"
                    android:layout_height="19dp"
                    android:background="#00000000"
                    android:gravity="left"
                    android:text="#20~25天收成"
                    android:textColor="#89B094"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/BT_hashtag2_3"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:background="#00000000"
                    android:gravity="left"
                    android:text="#20~25度C"
                    android:textColor="#89B094"
                    android:textStyle="bold"/>
            </LinearLayout>
        </FrameLayout>

        <!--顯示作物資料欄3-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp">
            <Button
                android:id="@+id/BT_nextPageBtn3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"/>

            <ImageView
                android:id="@+id/white_behi3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:srcCompat="@drawable/icon2_4" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="24dp"
                android:paddingLeft="20dp">

                <Button
                    android:id="@+id/BT_corp_picture3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_bokchoy" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="24dp"
                android:paddingLeft="190dp">

                <TextView
                    android:id="@+id/TX_crop_name3"
                    android:layout_width="73dp"
                    android:layout_height="30dp"
                    android:background="@drawable/icon11"
                    android:text="小白菜"
                    android:textColor="#3D4B42"
                    android:textSize="23dp" />

                <Button
                    android:id="@+id/BT_hashtag3_1"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:background="#00000000"
                    android:gravity="left"
                    android:text="#四季"
                    android:textColor="#89B094"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/BT_hashtag3_2"
                    android:layout_width="wrap_content"
                    android:layout_height="19dp"
                    android:background="#00000000"
                    android:gravity="left"
                    android:text="#20~25天收成"
                    android:textColor="#89B094"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/BT_hashtag3_3"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:background="#00000000"
                    android:gravity="left"
                    android:text="#20~25度C"
                    android:textColor="#89B094"
                    android:textStyle="bold"/>
            </LinearLayout>

        </FrameLayout>

        <!--返回鍵-->
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/open_bottom_sheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_icon="@drawable/back"
            app:fab_colorNormal="#FC9D33"
            app:fab_colorPressed="#F7C389"
            android:onClick="showDialog"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"/>

    </LinearLayout>
</ScrollView>

