                android:layout_marginTop="5dp"
                android:layout_marginEnd="56dp"
                app:srcCompat="@drawable/post_thumbsup" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="18dp"
                android:layout_height="16dp"
                android:layout_marginStart="-48dp"
