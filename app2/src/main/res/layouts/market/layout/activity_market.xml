<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/market_RL"
        >

        <!-- 切換卡 -->
        <android.support.v4.view.ViewPager
            android:id="@+id/market_viewpager"
            android:layout_width="match_parent"
            android:layout_height="300dp">


        </android.support.v4.view.ViewPager>

        <EditText
            android:id="@+id/search_record"
            android:layout_width="220dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rec"
            android:textSize="22dp"
            android:textColor="#fff"
            android:paddingLeft="14dp"

            />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="270dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/market_heart" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="325dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/market_car" />

        <!-- 點點 -->
        <LinearLayout
            android:id="@+id/market_viewgroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"

            android:layout_marginTop="280dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"
        android:layout_below="@+id/market_RL"
        android:paddingTop="10dp"
        android:text="編輯精選"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imv01"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/textView"
        android:paddingTop="10dp"
        android:layout_marginStart="10dp"
        app:srcCompat="@drawable/market_example1"
        android:onClick="setcommo"
        />

    <ImageView
        android:id="@+id/imv02"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="190dp"
        android:paddingTop="10dp"
        app:srcCompat="@drawable/market_example2" />

    <TextView
        android:id="@+id/name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imv01"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:paddingTop="10dp"
        android:text="抹刀"
        android:textSize="20sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:text="NT$ 80"
        android:textSize="15sp"
        android:textColor="#7ECB84"
        android:layout_below="@+id/name1"
        />

    <TextView
        android:id="@+id/name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imv02"
        android:layout_alignParentStart="true"
        android:layout_marginStart="200dp"
        android:paddingTop="10dp"
        android:text="耙子"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="200dp"
        android:text="NT$ 95"
        android:textSize="15sp"
        android:textColor="#7ECB84"
        android:layout_below="@+id/name2"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_market_fragment"
        />
    </RelativeLayout>