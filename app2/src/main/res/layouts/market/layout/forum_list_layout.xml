<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/forum_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:cardCornerRadius="10dp"
        app:cardElevation="6dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:contentPaddingBottom="7dp">

        <RelativeLayout
            android:layout_width="358dp"
            android:layout_height="169dp">

            <ImageView
                android:id="@+id/plant"
                android:layout_width="156dp"
                android:layout_height="133dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="11dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                app:srcCompat="@drawable/post_plant00" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="50dp"
                android:layout_height="38dp"
                android:layout_above="@+id/tx2"
                android:layout_alignParentTop="true"
                android:layout_marginStart="6dp"
                android:layout_marginTop="19dp"
                android:layout_marginBottom="17dp"
                android:layout_toEndOf="@+id/plant"
                app:srcCompat="@drawable/post_jaili" />

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="33dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="115dp"
                android:layout_marginEnd="17dp">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="3dp"
                    android:layout_toStartOf="@+id/textView4"
                    app:srcCompat="@drawable/post_heart" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="7dp"
                    app:srcCompat="@drawable/post_chat" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="14dp"
                    android:text="18"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="16dp"
                    android:text="31"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tx1"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/imageView7"
                android:text=" 今天 18:55"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tx1"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/plant"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="45dp"
                android:text="狠愛種"
                android:textAlignment="viewStart"
                android:textColor="#141313"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tx2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="74dp"
                android:layout_toEndOf="@+id/plant"
                android:text="高麗菜一直被蟲咬"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>